<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">

	<!-- 全局参数 -->
	<context-param>
		<param-name>globalParam</param-name>
		<param-value>UTF-8</param-value>
	</context-param>	


	<!-- 实现Servlet接口 -->
	<servlet>
		<servlet-name>myservlet1</servlet-name>
		<servlet-class>Servlet基础.$1_继承Servlet</servlet-class>
		<!-- 初始化servlet时的参数，通过ServletConfig可以获取值 -->
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<!-- Tomcat一启动就初始化servlet,数字越小越先初始化 -->
		<!-- <load-on-startup>1</load-on-startup> -->
	</servlet>
	<servlet-mapping>
		<servlet-name>myservlet1</servlet-name>
		<url-pattern>/myservlet1</url-pattern>
	</servlet-mapping>

	<!-- 继承GenericServlet -->
	<servlet>
		<servlet-name>myservlet2</servlet-name>
		<servlet-class>Servlet基础.$2_继承GenericServlet</servlet-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>myservlet2</servlet-name>
		<url-pattern>/myservlet2</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>firstServlet</servlet-name>
		<servlet-class>Servlet进阶.FirstServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>firstServlet</servlet-name>
		<url-pattern>/firstServlet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>



</web-app>
